  Dialogs, ExtCtrls, StdCtrls, TeEngine, Series, Grids, Buttons, TeeProcs,
  Chart,math, shellapi, Vcl.CheckLst;

type data= record
    parId: integer;
    parName: string;
    periudId: integer;
    proc: Real;
    rost: Boolean;
  end;
type
  TCO = class(TForm)
    OD: TOpenDialog;
