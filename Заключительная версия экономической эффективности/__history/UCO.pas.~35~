 tt2:=tt1;
 end; }



   sg1.Cells[3,1]:=floattostr(otv2);
   sg1.Cells[3,2]:=floattostr(tt2);

   sg1.Cells[4,1]:=floattostr(otv);
   sg1.Cells[4,2]:=floattostr(tt1);

   sg1.Cells[3,0]:='снижение на '+inttostr(i-1);
   sg1.Cells[4,0]:='снижение на '+inttostr(i);
end;


