co.cb1.Items.Add(fdp.SGZat.Cells[0,i]);
co.show;
end;



procedure TFDper.Label48Click(Sender: TObject);
var i:integer;
t:real;
begin
shape3.Visible :=false;
label56.Visible:=false;
