procedure TFMain.FormCreate(Sender: TObject);
var r1,r2:HRGN;
e: real;
ini: Tinifile;
i:integer;

begin
 Ini := TIniFile.Create('ListFile.ini');
 if GetIniCount('ListFile.ini','Список файлов')=0 then Exit
 else
   for i := GetIniCount('ListFile.ini','Список файлов') downto 1 do
 begin
 spfil[i-1]:=Ini.ReadString('Список файлов','Фаил № '+IntToStr(i),'fdf');
 ListBox1.Items.Add(ExtractFileName(spfil[i-1]));
 end;
 //Ini.ReadSection('Список файлов', spfil);
 Panel2.Top:=Round(FMain.Height/2-Panel2.Height/2);       //  Ставлю панель по центру
 Panel2.Left:=Round(FMain.Width/2-Panel2.Width/2);
 Panel2.Focused;

  {if ParamStr(1) <> '' then
    Panel1.caption := Panel1.caption + ' для "' + ParamStr(1) + '"';                //!!!!!!!!!!!!!!!!!!!!!!!!!!!!

  r1:=CreateRectRGN(0,0, RightChart.Width, RightChart.Height);
  r2:=createEllipticRgn(0,-RightChart.Height, RightChart.Width, RightChart.Height*2);
  CombineRGN(r1,r1,r2,RGN_AND);

  SetWindowRGN(RightChart.Handle,r1,true);  }
end;

