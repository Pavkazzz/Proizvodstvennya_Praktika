procedure TFMain.Label1MouseEnter(Sender: TObject);
begin
  (Sender As TLabel).Font.Style :=(Sender As TLabel).Font.Style+[fsUnderLine];
end;

procedure TFMain.Label1MouseLeave(Sender: TObject);
begin
  (Sender As TLabel).Font.Style :=(Sender As TLabel).Font.Style-[fsUnderLine];
end;

