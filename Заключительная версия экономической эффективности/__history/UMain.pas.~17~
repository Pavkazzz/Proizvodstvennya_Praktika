 N9.Enabled:=true;
end;

procedure TFMain.ListBox1MouseMove(Sender: TObject; Shift: TShiftState; X,
  Y: Integer);
Var Point:TPoint;
t:Integer;
begin

Point.X:=X;
Point.Y:=Y;
With ListBox1 Do
Begin
t:=ItemAtPos(Point,True);
IF t>-1 then
Hint:=spfil[9-t]
Else Application.CancelHint;
End;

end;

procedure TFMain.open_fileExecute(Sender: TObject);     //Функция открытия файла
var ini: Tinifile;
i: integer;
buf: string;
begin
 if ODial.Execute then
  Begin
    DM.OpenProject(ODial.FileName);
    form1.lb.items.add(ODial.FileName);
    // FRisk.ShowModal;
    //FileNamelab.Caption:=DM.CurrentFileName;  //!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
    Panel2.Visible:=false;           //Скрываем и показываем поля
    ScrollBox1.Visible:=true;
    // Добавление в init фаил
    Ini := TIniFile.Create('ListFile.ini');
    if GetIniCount('ListFile.ini','Список файлов')=10 then
      begin
        for I := 1 to 9 do
        begin
        ini.WriteString('Список файлов','Фаил № '+IntToStr(i),Ini.ReadString('Список файлов','Фаил № '+IntToStr(i+1),'fdf'));
        end;
        ini.WriteString('Список файлов','Фаил № '+'10',ODial.FileName);
      end
    else
      ini.WriteString('Список файлов','Фаил № '+IntToStr(ListBox1.Count+1),ODial.FileName);
    SpeedButton4Click(Self);
    Panel1.Visible:=true;
  N8.Enabled:=true;
  N9.Enabled:=true;
  End;
end;

