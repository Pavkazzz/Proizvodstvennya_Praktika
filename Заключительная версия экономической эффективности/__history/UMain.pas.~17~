procedure TFMain.saveExecute(Sender: TObject);      //Функция сохранения
begin
if DM.CurrentFileName='' then
  If SDial.Execute then
  Begin
    DM.CreateNewDataBase(SDial.FileName);
    DM.SaveProject;
  //  FileNameLab.Caption:=DM.CurrentFileName;           //!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
  End
  Else EXIT;

  DM.SaveProject;
 // FileNameLab.Caption:=DM.CurrentFileName;             //!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
end;

