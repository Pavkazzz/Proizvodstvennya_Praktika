procedure TFMain.SpeedButton3Click(Sender: TObject);
var i:integer;
begin
   for i:=1 to 17 do
  begin
    if (FindComponent('combobox'+inttostr(i)) as TCombobox).ItemIndex=-1  then
    begin
      ShowMessage('Заполните все поля!');
      Exit;
    end;
  end;

  Fd.ShowModal;
  Fd.SpeedButton1Click(self);
end;

