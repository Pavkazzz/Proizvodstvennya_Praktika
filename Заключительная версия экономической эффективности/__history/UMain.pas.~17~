{$R *.dfm}
function TFMain.GetIniCount(IniFileName, IniSection: string): integer;
var
  IniFile: TIniFile;
  SL: TStringList;
begin
  IniFile:=TIniFile.Create(IniFileName);
  SL:=TStringList.Create;
  try
    IniFile.ReadSection(IniSection,SL);
    Result:=SL.Count;
  finally
    SL.Free;
    IniFile.Free;
  end;
end;

